<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:src="@drawable/ic_home" />

    <Button
        android:id="@+id/buttonDisplayMap"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_above="@+id/buttonFlashQRCode"
        android:layout_alignLeft="@+id/buttonEnterTarget"
        android:layout_alignRight="@+id/buttonEnterTarget"
        android:layout_marginBottom="16dp"
        android:text="@string/btn_display_map" />

    <Button
        android:id="@+id/buttonEnterTarget"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_above="@+id/buttonDisplayMap"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:text="@string/btn_enter_target" />

    <Button
        android:id="@+id/buttonFlashQRCode"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_above="@+id/imageView1"
        android:layout_alignLeft="@+id/buttonDisplayMap"
        android:layout_alignRight="@+id/buttonDisplayMap"
        android:layout_marginBottom="44dp"
        android:text="@string/btn_flash_QRCode" />

</RelativeLayout>